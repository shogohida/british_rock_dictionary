<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href=""/artists>
    <img src="https://www.publicdomainpictures.net/pictures/40000/velka/union-jack-flag-1365882581V0R.jpg" />
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a><%= link_to 'Add an artist', new_artist_path(@artist) %></a>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.onebauer.media/one/media/5e00/e350/6a79/a373/b5e5/b37b/1990s_albums.jpg);">
  <div class="container">
    <h1><strong>Artists</strong></h1>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @artists.each do |artist| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path artist.photo.key, height: 300, width: 400, crop: :fill %>')">
         <%= link_to artist.name, artist_path(artist) %>
      </div>
    <% end %>
  </div>
</div>




