<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="/artists">
    <img src="https://www.publicdomainpictures.net/pictures/40000/velka/union-jack-flag-1365882581V0R.jpg" />
  </a>
</div>

<div class="song-container">
  <div class="song-info">
    <h1>Add a new artist</h1>

    <%= simple_form_for(@artist) do |f| %>
        <%= f.input :name %>
        <%= f.input :years_active %>
        <%= f.input :separated, as: :boolean, checked_value: true, unchecked_value: false %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
    <% end %>
  </div>
</div>
